<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="BasePawn" Name="THU_XenomorphRaceBase" Abstract="True">  
		<statBases>	
			<PsychicSensitivity>100</PsychicSensitivity>
			<ToxicSensitivity>0</ToxicSensitivity>
			<Flammability>1</Flammability>
			<ComfyTemperatureMin>-40</ComfyTemperatureMin>
			<ComfyTemperatureMax>80</ComfyTemperatureMax>
			<MeatAmount>0</MeatAmount>
			<LeatherAmount>0</LeatherAmount>	  
		</statBases>
		<race>
			<thinkTreeMain>THU_Xenomorph</thinkTreeMain>
			<body>THU_Xenomorph</body>
			<bloodDef>FilthBloodInsect</bloodDef>	
			<foodType>None</foodType>
			<intelligence>ToolUser</intelligence>
			<useMeatFrom>GrizzlyBear</useMeatFrom>	    
			<needsRest>false</needsRest>
			<hasGenders>false</hasGenders>
			<!-- <predator>true</predator> -->			
			<lifeStageAges>
				<li>
					<def>AnimalAdult</def>
					<minAge>0</minAge>
					<soundWounded>THU_Xenomorph_Pain</soundWounded>
					<soundDeath>THU_Xenomorph_Death</soundDeath>
					<soundCall>THU_Xenomorph_Call</soundCall>
					<soundAngry>THU_Xenomorph_Angry</soundAngry>
				</li>
			</lifeStageAges>
			<lifeExpectancy>90</lifeExpectancy>
			<soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
			<soundCallIntervalRange>
				<min>3000</min>
				<max>10000</max>
			</soundCallIntervalRange>
		</race>
	</ThingDef>


	
	
	<!-- DRONE -->

	<ThingDef ParentName="THU_XenomorphRaceBase">
		<defName>THU_XenomorphDrone</defName>
		<label>Xenomorph Drone</label>
		<description>Drones are the backbone of the Xenomorph hive. Their bodies are much stronger than those of their humanlike hosts. The first Xenomorph encountered on record was born in 2122 on the commercial towing vessel Nostromo, property of the Weyland-Yutani Corporation.</description>
		<statBases>
			<MoveSpeed>5</MoveSpeed>
			<ArmorRating_Blunt>0.02</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.02</ArmorRating_Sharp>
		</statBases>
		<verbs>
			<li>
				<verbClass>Verb_MeleeAttack</verbClass>
				<defaultCooldownTime>3.5</defaultCooldownTime>
				<meleeDamageBaseAmount>45</meleeDamageBaseAmount>
				<meleeDamageDef>Stab</meleeDamageDef>
				<linkedBodyPartsGroup>Mouth</linkedBodyPartsGroup>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<def>Stun</def>
							<amount>50</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
			</li>
			<li>
				<verbClass>Verb_MeleeAttack</verbClass>
				<defaultCooldownTime>2.0</defaultCooldownTime>
				<meleeDamageBaseAmount>40</meleeDamageBaseAmount>
				<meleeDamageDef>Cut</meleeDamageDef>
				<linkedBodyPartsGroup>THU_XenomorphTail</linkedBodyPartsGroup>
			</li>
			<li>
				<verbClass>Verb_MeleeAttack</verbClass>
				<defaultCooldownTime>1.0</defaultCooldownTime>
				<meleeDamageBaseAmount>10</meleeDamageBaseAmount>
				<meleeDamageDef>Cut</meleeDamageDef>
				<linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
			</li>
			<li>
				<verbClass>Verb_MeleeAttack</verbClass>
				<defaultCooldownTime>1.0</defaultCooldownTime>
				<meleeDamageBaseAmount>10</meleeDamageBaseAmount>
				<meleeDamageDef>Cut</meleeDamageDef>
				<linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
			</li>
		</verbs>
		<race>
			<baseBodySize>2.0</baseBodySize>
			<baseHealthScale>1.2</baseHealthScale>
		</race>
	</ThingDef>


	
	
